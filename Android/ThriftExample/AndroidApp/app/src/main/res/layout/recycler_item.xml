<?xml version="1.0" encoding="utf-8"?>
<dydus.com.multicloudservice.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView_photo" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/image_state"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/load_up_icon"
            android:scaleType="centerCrop"/>
    </RelativeLayout>


</dydus.com.multicloudservice.SquareRelativeLayout>